<main class="contenedor contenedor-formularios">
    <h1><%- nombrePagina %></h1>
    <form class='default-form' method='POST' >
        <legend>Sobre el Meeti</legend>
        <div class="campo">
            <label>Grupo</label>
            <select name="grupoId">
                    <option value="" disabled selected>-- Selecciona Grupo --</option>
                    <% if (grupos) { %>
                    <% grupos.forEach(grupo =>{ %>
                        <option value="<%- grupo.id %>" <%-(locals.meeti && (locals.meeti.grupoId == grupo.id)) ? "selected" : "" %> >  <%-grupo.nombre %> </option>
                    <% }) %>
                <% } %>
            </select>
        </div>
        <div class="campo">
            <label>Titulo</label>
            <input type="text" name="titulo" placeholder="Titulo Meeti" value = '<%- locals.meeti ? locals.meeti.titulo : "" %>'>
        </div>
        <div class="campo">
            <label>Invitado</label>
            <input type="text" name="invitado" placeholder="Nombre Invitado o Ponente (si aplica)" value = '<%- locals.meeti ? locals.meeti.invitado : "" %>' >
        </div>
        <div class="columnas-2 grid">
            <div class="campo">
                <label>Fecha</label>
                <input type="date" name="fecha" placeholder="Fecha Meeti" value = '<%- locals.meeti ? locals.meeti.fecha : "" %>' >
            </div>
            <div class="campo">
                <label>Hora</label>
                <input type="time" name="hora" placeholder="Hora Meeti" value = '<%- locals.meeti ? locals.meeti.hora : "" %>' >
            </div>
        </div>
        <div class="campo">
            <label>Cupo</label>
            <input type="number" min="1" name="cupo" placeholder="Cupo Meeti (si aplica)" value = '<%- (locals.meeti && locals.meeti.cupo!=0) ? locals.meeti.cupo : "" %>' >
        </div>
        <div class="campo descripcion">
            <label>Descripción</label>
            <div class="contenedor-editor">
                <input type="hidden" id="x" name="descripcion" value = '<%- locals.meeti ? locals.meeti.descripcion : "" %>' >
                <trix-editor input="x"></trix-editor>
            </div>
        </div>

        <legend>Ubicación Meeti</legend>
        <div class="campo buscador">
            <label>Coloca la Dirección del Meeti</label>
            <div class="contenedor-input">
                <input type="text" id="formbuscador" placeholder="Ubicación">
                <small>El asistente colocará una dirección estimada</small>
            </div>
        </div>
        
        <div class="campo mapa">
            <div id="mapa"></div>
        </div>
            
        
        <p class="informacion">Confirma que los siguientes campos sean correctos:</p>
        <div class="campo">
            <label>Dirección</label>
            <input type="text" id="direccion" name="direccion" placeholder="Dirección" value = '<%- locals.meeti ? locals.meeti.direccion : "" %>' >
        </div>
        <div class="campo">
            <label>Ciudad</label>
            <input type="text" id="ciudad" name="ciudad" placeholder="Ciudad" value = '<%- locals.meeti ? locals.meeti.ciudad : "" %>' >
        </div>
        <div class="campo">
            <label>Estado</label>
            <input type="text" id="estado" name="estado" placeholder="Estado" value = '<%- locals.meeti ? locals.meeti.estado : "" %>' >
        </div>
        <div class="campo">
            <label>País</label>
            <input type="text" id="pais" name="pais" placeholder="País" value = '<%- locals.meeti ? locals.meeti.pais : "" %>' >
        </div>
        <div class="campo">
            <label>Latitud</label>
            <input type="text" id="lat" name="lat" value = '<%- locals.meeti ? meeti.ubicacion.coordinates[0] : ubicacion.ll[0] %>' readonly >
        </div>
        <div class="campo">
            <label>Longtitud</label>
            <input type="text" id="lng" name="lng" value = '<%- locals.meeti ? meeti.ubicacion.coordinates[1] : ubicacion.ll[1] %>' readonly >
        </div>
        <div class="campo enviar">
            <input type="submit" class="btn btn-rosa" value= '<%- locals.nuevo ? "Crear Meeti" : "Actualizar Meeti" %>' >
        </div>
    </form>
</main>

