<main class='contenedor contenedor-formularios no-padding'>
    <h1><%= nombrePagina %></h1>
    <form class='default-form' method='POST'>
        <div class='campo'>
            <label>Nombre</label>
            <input type='text' name='nombre' placeholder='Nombre Grupo'>
        </div>
        <div class='campo descripcion'>
            <label>Descripcion</label>
            <div class='contenedor-editor'>
                <input type='hidden' name='descripcion' id='x' >
                <trix-editor input='x'></trix-editor>
            </div>
        </div>
        <div class='campo'>
            <label>Categoria</label>
            <select name="categoria">
                <option value="" selected disabled>-- Categoria --</option>
                <% if (categorias) { %>
                    <% categorias.forEach(categoria =>{ %>
                        <%- '<option value="' + categoria.id + '">' + categoria.nombre + '</option>' %>
                    <% }) %>
                <% } %>
            </select>
        </div>

        <div class='campo'>
            <label>Imagen</label>
            <input type='file' name='imgen'>
        </div>
        <div class='campo'>
            <label>Pagina</label>
            <input type='url' name='url' placeholder='Tu Pagina'>
        </div>
        <div class='campo enviar'>
               <input type= 'submit' value ='Crear Grupo' class= 'btn btn-rosa'> </input>
        </div>
    </form>
</main>
